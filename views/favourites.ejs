<%- include("header"); %> 

<div style="text-align:center">
    <h2 style="font-family:itallic">Favoris </h2>
    <p><img src="/image/favori.png" alt="image d'une Ã©toile jaune"></p>
    <a href="/dashboard/favourites/newfavourite"><button type="button" class="btn btn-success" style="margin-bottom:15px">Ajouter nouveau favoris</button></a>

    <div class="container" style="text-align:center">
        <div class="row">
            <% favourite.forEach((favourite)=>{ %> 
            <div class="col-lg-4">
                <div class="card" style="width: 15rem;">
                    <img class="card-img-top" src="<%= favourite.image%>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= favourite.title%></h5>
                        <p class="card-text"><%= favourite.description %></p>
                        <a href="#" class="btn btn-primary"><%=favourite.date %></a>
                        <form action="/dashboard/favourites/<%= favourite._id %>?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger" style="margin-top:15px;">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
                
        </div>

    </div>
</div>

<%- include("footer"); %> 