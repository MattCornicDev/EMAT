<%- include("header"); %> 

<div class="container">
    <nav class="navbar navbar-expand-lg">
        <h1 style="color:black"><a href="/" style="text-decoration:none">Immatriculation</a></h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard"></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/dashboard/favourites">Favoris</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard/myreceipes">Receipes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard/schedule">Programmation</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Quitter</a>
                </li>


            </ul>
        </div>
    </nav>
    <div class="infos-user" style="margin-top:-50px;">
        <div class="img-profile" style="text-align:center">
            <a class="item" href="/dashboard">
                <h4 style="text-align:center;color:black;text-decoration:none"></h4>
            </a>
        </div>
    </div>

    <div style="width:400px">
        <% if(error && error.length>0){ %>
        <div class="warning-message">
            <div class="header">
                <%= error %>
            </div>
        </div>
        <% } %>
        <% if(success && success.length > 0) { %>
        <div class="success-message">
            <div class="header">
                <%= success%>
            </div>
        </div>
        <% } %>
    </div>




    <div class="new-schedule" style="text-align:center">
        <div style="margin-top:50px;">
            <h1 style="font-family:itallic">Nouvelle programmation</h1>
            <form method="POST" action="/dashboard/schedule" class="ui form">
                <div class="field">
                    <label>Receipe Nom: </label><br>
                    <input type="text" name="receipename" placeholder="receipe name" autocomplete="off">
                </div>
                <div class="field">
                    <label>Date:</label><br>
                    <input name="scheduleDate" type="date">
                </div>
                <div class="field">
                    <label>Temps:</label><br>
                    <input type="text" name="time" placeholder="enter time in 24 hours eg: 19:00" autocomplete="off">
                </div>
                <button type="submit" class="btn btn-success" style="margin-top:15px">Succ√®s</button>
            </form>
        </div>
    </div>
</div>


<%- include("footer"); %>