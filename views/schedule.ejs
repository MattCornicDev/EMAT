<%- include('header'); %>

<div style="text-align:center">
    <h2 style="margin-top:40px;color:black;font-family:itallic">Programmation:</h2>
    <p><img src="/image/planificateur.jpg"  width="300px" alt="image d'un calendrier"></p>
    <a href="/dashboard/schedule/newschedule"><button type="button" class="btn btn-success">Nouvelle programmation</button></a>

  <% schedule.forEach((schedule) => { %>

    <div class="infos-schedule" style="margin-top:30px">
        <h3><%= schedule.ReceipeName %></h3>
        <p>Time: <%= schedule.time %> </p>
        <p>Date: <%= schedule.scheduleDate %></p>
        <div class="item">
            <div class="delete-schedule">
                <form action="/dashboard/schedule/<%= schedule._id%>?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger" value="delete">Supprimer</button>
                </form>
            </div>
            <div class="content">
                <span>Ajout√© le : <%= schedule.date %> </span>
            </div>
        </div>
    </div>

<% }); %>

</div>

<%- include("footer"); %> 